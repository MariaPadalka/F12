<Page x:Class="Presentation.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="821.053">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Blue container for the menu -->
            <ColumnDefinition Width="7*"/>
            <!-- White container for the main content -->
        </Grid.ColumnDefinitions>

        <!-- Blue container for the menu -->
        <Grid Background="#121B28">
            <!--<TextBlock Height="24" HorizontalAlignment="Left" Margin="132,105,0,0" x:Name="textBlockHeading" Text="Перекази" VerticalAlignment="Top" Width="154"  FontSize="17" FontStretch="ExtraCondensed" FontWeight="Bold"/>
                <TextBlock Height="24" HorizontalAlignment="Left" Margin="132,105,0,0" x:Name="textBlockHeading" Text="Dashboard" VerticalAlignment="Top" Width="154"  FontSize="17" FontStretch="ExtraCondensed" FontWeight="Bold"/>
                <TextBlock Height="24" HorizontalAlignment="Left" Margin="132,105,0,0" x:Name="textBlockHeading" Text="Статистика:" VerticalAlignment="Top" Width="154"  FontSize="17" FontStretch="ExtraCondensed" FontWeight="Bold"/>
                <TextBlock Height="24" HorizontalAlignment="Left" Margin="132,105,0,0" x:Name="textBlockHeading" Text="Налаштування" VerticalAlignment="Top" Width="154"  FontSize="17" FontStretch="ExtraCondensed" FontWeight="Bold"/>-->
        </Grid>

        <!-- White container for the main content -->
        <Grid Grid.Column="1" Background="White">
            <!-- Add main content here -->
            <Grid ShowGridLines="false" Margin="29,308,146,0">
                <TextBlock Height="22" HorizontalAlignment="Left" Margin="0,-286,0,0" x:Name="textBlockHeading" Text="Панель керування:" VerticalAlignment="Top" Width="161"  FontSize="17" FontStretch="ExtraCondensed" FontWeight="Bold"/>
                <Grid Margin="0,-229,-45,314">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="114*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="338*"/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="___icons_greenDollar" Margin="-72,-23,14,55" RenderTransformOrigin="-3.669,-1.36">
                        <Image.Source>
                            <BitmapImage UriSource="/icons/green-dollar.PNG" />
                        </Image.Source>
                    </Image>
                    <TextBlock Height="22" HorizontalAlignment="Left" Margin="10,35,0,0" x:Name="balance" Text="Баланс:" VerticalAlignment="Top" Width="161"  FontSize="12" FontStretch="ExtraCondensed" Grid.ColumnSpan="3" />
                    <TextBlock Height="22" HorizontalAlignment="Left" Margin="10,7,0,0" x:Name="balanceValue" Text="$3,596" VerticalAlignment="Top" Width="161"  FontSize="20" FontStretch="ExtraCondensed" FontWeight="Bold" Grid.ColumnSpan="3"/>

                    <Image x:Name="___icons_blueDollar" Margin="78,-26,336,49" RenderTransformOrigin="-3.669,-1.36" Grid.ColumnSpan="3">
                        <Image.Source>
                            <BitmapImage UriSource="/icons/blue_dollar.PNG" />
                        </Image.Source>
                    </Image>
                    <TextBlock Height="22" HorizontalAlignment="Left" Margin="11,33,0,0" x:Name="income" Text="Дохід:" VerticalAlignment="Top" Width="62"  FontSize="12" FontStretch="ExtraCondensed" Grid.ColumnSpan="2" Grid.Column="1" />
                    <TextBlock Height="22" HorizontalAlignment="Left" Margin="9,8,0,0" x:Name="incomeValue" Text="$421:" VerticalAlignment="Top" Width="62"  FontSize="20" FontStretch="ExtraCondensed" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Column="1"/>

                    <TextBlock Height="22" HorizontalAlignment="Left" Margin="84,35,0,0" x:Name="expenses" Text="Витрати:" VerticalAlignment="Top" Width="73"  FontSize="12" FontStretch="ExtraCondensed" Grid.Column="2" />
                    <TextBlock Height="22" HorizontalAlignment="Left" Margin="84,7,0,0" x:Name="expensesValue" Text="$164:" VerticalAlignment="Top" Width="62"  FontSize="20" FontStretch="ExtraCondensed" FontWeight="Bold" Grid.Column="2"/>


                    <TextBlock Height="22" HorizontalAlignment="Left" Margin="219,35,0,0" x:Name="savings" Text="Збереження:" VerticalAlignment="Top" Width="73"  FontSize="12" FontStretch="ExtraCondensed" RenderTransformOrigin="0.749,0.89" Grid.Column="2" />
                    <TextBlock Height="22" HorizontalAlignment="Left" Margin="219,7,0,0" x:Name="savingsValue" Text="$257:" VerticalAlignment="Top" Width="62"  FontSize="20" FontStretch="ExtraCondensed" FontWeight="Bold" Grid.Column="2"/>

                </Grid>
                <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" SelectionChanged="dataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                        <DataGridTextColumn Header="Details" Binding="{Binding Details}" />
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" />
                    </DataGrid.Columns>
                </DataGrid>
                <Grid.Resources>
                </Grid.Resources>
                <!-- Date items and layout (as in the original XAML) -->
                <!-- ... -->
            </Grid>
        </Grid>
    </Grid>
</Page>
